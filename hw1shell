int colorSamples(){
    // Print text in red
    printf("\033[1;31mThis text is red.\033[0m\n");
    // Print text in green
    printf("\033[1;32mThis text is green.\033[0m\n");
    // Print text in Yellow
    printf("\033[1;33mThis text is yellow.\033[0m\n");
    // Print text in magenta
    printf("\033[1;35mThis text is magenta.\033[0m\n");
    // Print text in blue
    printf("\033[1;34mThis text is blue.\033[0m\n");
    // Print text in cyan
    printf("\033[1;36mThis text is cyan.\033[0m\n");
    // Print text in white
    printf("\033[1;37mThis text is white.\033[0m\n");
    // Print text in grey
    printf("\033[1;30mThis text is bright black, so you may see black or grey.\033[0m\n");
    // Print text in black
    printf("\033[0;30mThis text is black.\033[0m\n");
    // Print text as default
    printf("\033[0mThis is your default color\n");
    return 0;
}
int colorSelect(){
    char choice[34];
    while(1){
        printf("\n\nPlease rChoose a text color or type exit or done to end color selection\n");
        fgets(choice, sizeof(choice), stdin);
        choice[strcspn(choice, "\n")] = 0;
       
        if(strcmp(choice,"red")==0||strcmp(choice,"Red")==0){
            printf("\033[1;31m"); // Changes color to red
            printf("\ntext color changed\n");
        }
        else if(strcmp(choice,"green")==0||strcmp(choice,"Green")==0){
            printf("\033[1;32m"); // Changes color to green
            printf("\ntext color changed\n");
        }
        else if(strcmp(choice,"yellow")==0||strcmp(choice,"Yellow")==0){
            printf("\033[1;33m"); // Changes color to
            printf("\ntext color changed\n");
        }
        else if(strcmp(choice,"magenta")==0||strcmp(choice,"Magenta")==0){
            printf("\033[1;35m"); // Changes color to
            printf("\ntext color changed\n");
        }
        else if(strcmp(choice,"blue")==0||strcmp(choice,"Blue")==0){
            printf("\033[1;34m"); // Changes color to
            printf("\ntext color changed\n");
        }
        else if(strcmp(choice,"cyan")==0||strcmp(choice,"Cyan")==0){
            printf("\033[1;36m"); // Changes color to
            printf("\ntext color changed\n");
        }
        else if(strcmp(choice,"white")==0||strcmp(choice,"White")==0){
            printf("\033[1;37m"); // Changes color to
            printf("\ntext color changed\n");
        }
        else if(strcmp(choice,"grey")==0||strcmp(choice,"Grey")==0
        ||strcmp(choice,"bright black")==0||strcmp(choice,"Bright black")==0
        ||strcmp(choice,"Bright black")==0||strcmp(choice,"Bright Black")==0){
            printf("\033[1;30m"); // Changes color to grey
            printf("\ntext color changed\n");
        }
        else if(strcmp(choice,"black")==0||strcmp(choice,"Black")==0){
            printf("\033[0;30m"); // Changes color to "black"
            printf("\ntext color changed\n");
        }
        else if(strcmp(choice,"default")==0||strcmp(choice,"Default")==0){
            printf("\033[0m"); // Changes color to default
            printf("\ntext color changed\n");
        }
        else if(strcmp(choice,"done")==0||strcmp(choice,"Done")==0){
            printf("Color selection is done. Thank you!\n");
            break;
        }
        else if(strcmp(choice,"exit")==0||strcmp(choice,"Exit")==0){
            printf("Exiting color selection now. Thank you!\n");
            break;
        }
        else if(strcmp(choice,"end")==0||strcmp(choice,"End")==0){
            printf("Ending color selection now. Thank you!\n");
            break;
        }
        else if(strcmp(choice,"final")==0||strcmp(choice,"Finalize")==0||strcmp(choice,"Final")==0||strcmp(choice,"finalize")==0){
            printf("You made you final color selection. Thank you!\n");
            break;
        }
        else {
            printf("\nPlease try again. If you are finished please indicate that with done, exit, or final. Thank you.\n");
        }
        printf("Your choice was %s", choice);
       
        // Please not that the 1;XY means that these are the bright versions of these colors
    }
    return 0;
}
