#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <sys/wait.h>
#include <sys/types.h>
#define msize (malloc(sizeof(char*) * 200))

int colorSamples();
int colorSelect();
int justArt();

int main(void){

	char *cmd = NULL, *token = NULL;
	char *dilim = " \n";
	size_t n = 0;
	int argc = 1, i = 0;
	char **argv = NULL;
	pid_t fid;

	for(;;){
		
		cmd = msize;

		printf("Instructions please: ");

		if (getline(&cmd, &n, stdin) == -1){
			return -1;
		}

		argv = msize;

		for (i < sizeof(argv)+1; i++;){
			argv[i] = msize;
		}
		i = 0;

		token = strtok(cmd, dilim);

		while(token){
			argv[i] = token;
			token = strtok(NULL, dilim);
			i++;
		}
		argv[i+1] = NULL;
		i = 0;

		if(strcmp(argv[0],"exit") == 0){

			for (i < sizeof(argv) + 1; i++;){
			free(argv[i]);
			}

			free(cmd);
			free(argv);
			printf("farwell user");
			sleep(3);
			return 0;
		}
		else if(strcmp(argv[0],"help") == 0){
			printf("help: Displays the available commands of this shell\n");
			printf("color: select a color for the text\n");
			printf("art: displays a normal nontreatening drawing\n");
			printf("ls <argument>: performs any normal ls comand\n");
			printf("exit: exits the shell");
		}
		else if(strcmp(argv[0],"ls") == 0){
			fid = fork();
				if(fid < 0){
					printf("fork error");
				}
				else if(fid == 0){
					execvp(argv[0], argv);
					exit(EXIT_SUCCESS);
				}
				else{
					wait(NULL);
				}
		}
		else if(strcmp(argv[0],"Color")||strcmp(argv[0],"color") == 0){
			colorSamples();
			colorSelect();
		}
		else if(strcmp(argv[0],"Art") == 0||strcmp(argv[0],"art") == 0){
			justArt();
		}
		else{
			printf("Invalid command, enter help for assistance");
		}
		
		i = 0;
		for (i < sizeof(argv) + 1; i++;){
			free(argv[i]);
		}

		i = 0;
		free(cmd);
		cmd = NULL;
		free(argv);
		printf("\n");
	}

	return 0;
}

